@model GraveBooking.Models.ViewModel
@{
    ViewBag.Title = "adminProfile";
}

<div class="card">
    <div class="card-body">
        @foreach (var emp in Model.admins)
        {
        <form id="myform" class="f" action="@Url.Action("updateAdminProfile", "adminProfile")" method="post">
            <div class="form-group" style="margin:10px">
                <label for="fullName">Full Name:</label>
                <input class="form-control" type="text" name="userName" value=@emp.adminName>
            </div>
            <div class="form-group" style="margin:10px">
                <label for="email">Email Address:</label>
                <input class="form-control" type="email" name="email" value=@emp.adminEmail>
            </div>
            <div class="form-group" style="margin:10px">
                <label for="Contact No:">Contact No:</label>
                <input class="form-control" type="text" name="phone" value=@emp.adminPhone>
            </div>
          

            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-success mt-2" style="background:#006a4e;color:white;width:200px;" type="submit" onclick="getModal()">Update</button>
            </div>
        </form>
        }
    </div>
</div>

<script>
    function getModal() {

        document.getElementById("myForm").submit();

    }
</script>
