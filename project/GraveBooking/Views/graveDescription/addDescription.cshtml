
@{
    ViewBag.Title = "addDescription";
}
@Styles.Render("~/Content/css/profile")


<div class="modal-content">
    <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Grave Description</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <form id="myForm" style="margin-left:100px;margin-right:100px;" action="@Url.Action("addDescription", "graveDescription")" method="post" enctype="multipart/form-data">
        <div class="modal-body mx-3" >

            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" id="check" name="location" placeholder="Enter Location" value="@Session["MapLoc"]">
                <a class="mt-auto" href="@Url.Action("showOnMap", "graveDescription")">View on map</a>
            </div>
            <div class="form-group">
                <label for="name">Graveyard Name:</label>
                <input class="form-control" type="text" name="graveyardName" placeholder="Enter Graveyard Name">
            </div>
            <div class="form-group">
                <label for="Author">Author Name:</label>
                <input class="form-control" type="text" name="authorName" placeholder="Author Name">
            </div>
            <div class="form-group">
                <label for="PlotNum">Plot Capacity:</label>
                <input class="form-control" type="text" name="numberOfPlots" placeholder="Enter Plot Number">
            </div>
            <div class="form-group">
                <label for="availablePlot">Available Plots:</label>
                <input class="form-control" type="text" name="availablePlot" placeholder="Enter Available Plot">
            </div>
            <div class="form-group">
                <label for="contact">Contact No:</label>
                <input class="form-control" type="text" name="contact" placeholder="Enter Contact Info">
            </div>

            <div class="form-group">
                <label for="Price">Price(Per plot):</label>
                <input class="form-control" type="text" name="plotPrice" placeholder="Price">
            </div>
            <div class="form-group">
                <label for="Image">Upload Image</label>
                <input type="file" id="myFile" name="image">
            </div>


        </div>


        <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-success mt-2" style="background:lightslategrey;color:white;width:200px;" type="submit" onclick="getModal()">Apply</button>
        </div>
    </form>
</div>


<script>
    function getModal() {

        document.getElementById("myForm").submit();

    }
</script>



