@model GraveBooking.Models.ViewModel
@{
    ViewBag.Title = "viewGravePost";
}
<style>
    .wrapper {
        position: relative;
        display: inline-block;
        width: 100%;
    }

    img {
        width: 100%;
        height: auto;
    }

    .search-wrapper {
        position: absolute;
        align-items: center;
        top: 40%;
        left: 75%;
        padding: 15px;
        -ms-transform: translateX(-50%) translateY(-50%);
        -webkit-transform: translate(-50%,-50%);
        transform: translate(-50%,-50%);
    }

        .search-wrapper input {
            width: 100%;
        }
</style>

<div class="wrapper" style="margin-left:10px;margin-right:10px;margin-top:-80px">
    <nav class="navbar navbar-expand-md">

        <div class="col-md-12">
            <img src="~/Media/Images/homepage.png" alt="" class="rounded" style="margin-top:10px;height:500px;border-radius:50px">
            <form action="@Url.Action("viewGravePost","viewGrave")" method="post">
                <div class="search-wrapper">
                    <div class="input-group">
                        <input type="text" class="form-control" id="search_form" placeholder="Search" name="search" style=" position: absolute; width: 220px;height:40px;margin-left:20px; margin-top: 5px; padding: 18px; font-size: 25px;  border-top-left-radius: 8px; border-bottom-left-radius: 8px;background-color:white;border-color:lightslategray">
                        <div class="input-group-btn">
                            <button class="btn btn-default" id="navSearchBtn" type="submit" style="margin-top:5px;margin-left: 240px; background:lightslategray;width: 80px;height:40px; border-radius: 0 0 0 0; border-top-right-radius: 5px; border-bottom-right-radius: 5px;">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </form>
        </div>

    </nav>
</div>


@foreach (var emp in Model.graveDescriptions)
{

