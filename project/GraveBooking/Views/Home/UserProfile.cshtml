
@model GraveBooking.Models.ViewModel
@{ ViewBag.Title = "UserProfile";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #myDIV {
            width: 100%;
            //padding: 50px 0;
